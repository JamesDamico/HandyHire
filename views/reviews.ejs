<%- include("../views/partials/header.ejs") -%>
<section>
    <!--*********************-->
    <!--* Reviews Container *-->
    <!--*********************-->
    <div class = "container-fluid">
        
        <h3 style="margin-top: 3rem;">Reviews</h3>
        <!--Reviews Row-->
        <div class = "row">
            <div class = " col-lg-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Decision</th>
                            <th scope="col">Name</th>
                            <th scope="col">Rating</th>
                            <th scope="col">Review</th>
                        </tr>
                    </thead>
                    
                    <%for(let i = 0; i < user.reviews.reviewsWaitingApproval.length; i++){%>
                        <form class="item" action="/approveRejectReview" method="POST">
                            <tbody>
                                <tr>
                                    <td><button class= "btn btn-success" type="submit" name="action" value="approve"><i class="fas fa-check"></i> Approve</button><button class= "btn btn-danger" type="submit" name="action" value="reject"><i class="fas fa-times"></i> Reject</button></td>
                                    <input class="form-control" type="text" id="index" name="index" value="<%=i%>" placeholder="index" autocomplete="off" readonly hidden>
                                    <td id = "homeownerName"><%=user.reviews.reviewsWaitingApproval[i].name%></td>
                                    <td id = "homeownerRating"><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i></td>
                                    <td id = "homeownerReview" class="blur"><%=user.reviews.reviewsWaitingApproval[i].description%></td>
                                </tr>
                            </tbody>     
                        </form>
                    <%}%>
                </table>
            </div>
        </div>
        <!--Ends Reviews Rows-->
    </div>
    <!--Ends Reviews Container-->
</section>
<%- include("../views/partials/footer.ejs") -%>